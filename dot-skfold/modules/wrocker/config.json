{
   "single-file": true,
   "options": [
      {
         "mandatory": true,
         "getopt": "abstract|A=s"
      },
      {
         "mandatory": true,
         "getopt": "author|a=s"
      },
      {
         "mandatory": true,
         "getopt": "email|e=s"
      },
      {
         "mandatory": false,
         "getopt": "version|v=s",
         "default": "0.1"
      },
      {
         "mandatory": true,
         "getopt": "year|y=i",
         "default": "[%= (localtime)[5] + 1900 %]"
      }
   ],
   "files": [
      {
         "source": "wrocker",
         "destination": "-",
         "mode": "a=rx,u+w",
         "dmode": "a=rx,u+w"
      }
   ]
}
